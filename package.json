{
  "name": "demo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "ganache-cli": "^6.3.0",
    "mocha": "^4.0.1",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-scripts": "2.1.5",
    "rimraf": "^2.6.3",
    "solc": "^0.4.24",
    "web3": "^1.0.0-beta.34"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "compile": "rimraf ./src/compiled/* && node ./scripts/compile.js",
    "precompile:w": "npm run compile",
    "compile:w": "onchange './contracts/*.sol' --npm run compile",
    "test:w": "mocha --watch",
    "rebuild":"npm run compile && mocha",
    "postrebuild":"onchange './contracts/*.sol' './test/*.js' --npm run rebuild "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
